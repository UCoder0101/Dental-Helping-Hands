<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context="com.dentalhelpinghands.fragments.office.OfficeHomeFragment">

    <include
        android:id="@+id/ilToolBar"
        layout="@layout/content_toolbar_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@id/ivProfile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_64sdp"
            android:src="@drawable/ic_place_holder"
            android:scaleType="centerCrop"
            app:riv_border_color="@color/colorKeppel"
            app:riv_border_width="@dimen/_2sdp"
            app:riv_corner_radius="@dimen/_14sdp"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btnPostAJob"
            style="@style/MyButtonStyle"
            android:layout_marginTop="@dimen/_32sdp"
            android:text="@string/btn_post_a_job" />

        <Button
            android:id="@+id/btnMyListing"
            style="@style/MyButtonStyle1"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/btn_my_listing" />
    </LinearLayout>

</LinearLayout>