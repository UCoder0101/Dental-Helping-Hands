<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/_20sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingBottom="@dimen/_10sdp"
    tools:context=".activities.FlowTypeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:scaleType="fitXY"
            android:src="@drawable/img_1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/ic_shape_1"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <TextView
        style="@style/MyTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/lbl_dental_helping_hands"
        android:textSize="@dimen/_16ssp"
        app:fontFamily="@font/font_bold_montserrat" />

    <Button
        android:id="@+id/btnDentalOffice"
        style="@style/MyButtonStyle"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/btn_dental_office" />

    <Button
        android:id="@+id/btnDentalProfessional"
        style="@style/MyButtonStyle1"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/btn_dental_professional" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_shape_2"
        tools:ignore="ContentDescription" />
</LinearLayout>