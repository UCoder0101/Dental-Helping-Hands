<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.dentalhelpinghands.adapters.office.OfficeNotificationAdapter">

    <View
        android:id="@+id/viewDummyTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_16sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingBottom="@dimen/_12sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"
            android:elevation="@dimen/_1sdp"
            android:scaleType="fitXY"
            tools:src="@drawable/img_2"
            app:riv_corner_radius="@dimen/_8sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProfessional"
                style="@style/MyTextViewStyle"
                android:layout_marginTop="@dimen/_8sdp"
                tools:text="Kitty"
                android:textSize="@dimen/_16ssp"
                app:fontFamily="@font/font_bold_montserrat" />

            <TextView
                android:id="@+id/tvNotificationMsg"
                style="@style/MyTextViewStyle"
                android:layout_marginTop="@dimen/_8sdp"
                android:singleLine="false"
                tools:text="has apply your job position"
                android:maxLines="2"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:id="@+id/llBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnConfirm"
                    style="@style/MyButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_button_2"
                    android:text="@string/btn_confirm" />

                <Button
                    android:id="@+id/btnDelete"
                    style="@style/MyButtonStyle1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_button_3"
                    android:text="@string/btn_delete" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/viewDummyBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@color/colorBgView" />
</LinearLayout>